<%= render 'header' %>

<div class="sub-header col-xs-12">
    Listing possible leads
</div>

<div class="contact-list col-xs-12">
    <% @contacts.each do |contact| %>
        <div class="contact-entry">
            <div class="col-xs-9">
                <h3><%= link_to contact.name, contact_path(contact) %>
                <%= link_to contact_path(contact), method: :delete do %>
                    <span class="glyphicon glyphicon-remove"></span>
                <% end %>
                </h3>
            </div>
            <div class="col-xs-12">
                <h5><%= contact.email %></h5>
            </div>
        </div>
    <% end %>
</div>
